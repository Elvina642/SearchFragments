<Window x:Name="SearchFragments" x:Class="SearchFragments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchFragments"
        mc:Ignorable="d"
        Title="SearchFragments" Height="428" Width="576">
    <Grid Margin="16,16,16,16">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="177*"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="64*"/>
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Left" Margin="0,145,0,0" Orientation="Vertical" VerticalAlignment="Top" Width="162">
                <Label x:Name="lblFragmentLength" Content="Ищем фрагменты длины:" Height="26" Width="162"/>
                <TextBox x:Name="txtFragmentLength" TextWrapping="Wrap" Text="0" Width="158" Height="20"/>
            </StackPanel>
            <Grid HorizontalAlignment="Left" Height="54" Margin="0,250,0,0" VerticalAlignment="Top" Width="189">
                <RadioButton x:Name="rbAnySymbol" Content="любого символа" Margin="0,39,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.478,-0.166" Height="15" Width="114"/>
                <RadioButton x:Name="rbUpperCaseLatin" Content="заглавной английской буквы" VerticalAlignment="Center" HorizontalAlignment="Center" Height="15" Width="189"/>
                <RadioButton x:Name="rbUpperCaseCyrillic" Content="заглавной русской буквы" HorizontalAlignment="Left" VerticalAlignment="Top" Height="14" Width="170"/>
            </Grid>
            <Label x:Name="lblSymbol" Content="Начинается с :" Margin="0,216,0,0" RenderTransformOrigin="0.218,0.462" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="102"/>
            <Button x:Name="btnLoadFile" Content="Загрузить файл" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Height="33" Click="BtnLoadFile_Click"/>
            <Button x:Name="btnSearch" Content="Поиск" Height="34" Click="BtnSearch_Click" RenderTransformOrigin="0.594,-0.772" VerticalAlignment="Top" Grid.Column="2"/>
            <Label x:Name="lblFileName" Content="Загружен файл:" Margin="0,51,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134"/>
            <TextBox x:Name="txtResult" TextWrapping="Wrap" Margin="240,51,0,0" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"/>
            <TextBox x:Name="txtFileName" TextWrapping="Wrap" Margin="0,82,0,0" TextChanged="TxtFileName_TextChanged" HorizontalAlignment="Left" Width="162" Height="40" VerticalAlignment="Top"/>



        </Grid>
        <Button x:Name="btnSaveToFile" Content="Сохранить результат в txt" Click="Button_Click" HorizontalAlignment="Left" Width="223" Margin="0,0,0,10" Height="35" VerticalAlignment="Bottom"/>
        <Border Background="#FFE2E2E2" 
        CornerRadius="16" 
        Padding="4" 
        Margin="166,172,0,0" HorizontalAlignment="Left" Width="18" Height="18" VerticalAlignment="Top" Cursor="Hand" ToolTip="Длина фрагмента учитывается пробелы">
            <TextBlock TextWrapping="Wrap" Text="?" RenderTransformOrigin="-5.788,1.073" TextAlignment="Center" Cursor="Hand" ToolTipService.InitialShowDelay="0" ToolTip="Длина фрагмента учитывает пробелы" Margin="-3,-3,-3,-5" Foreground="#FF5B5A5A">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.19" AngleX="-0.028"/>
                        <RotateTransform Angle="0.569"/>
                        <TranslateTransform X="-0.1" Y="-0.943"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Border>
    </Grid>
</Window>
